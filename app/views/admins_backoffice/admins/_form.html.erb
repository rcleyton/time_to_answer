<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>

<div class="row">
  <% if @admin.errors.any? %>
    <div class="col-lg-12">
      <div class="alert alert-danger alert-dismissible">
        <button class="close" type="button" data-dismiss="alert" aria-hiden="true">x</button>
        <ul>
          <% @admin.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= "#{action_message} Administrador" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: [:admins_backoffice, @admin], local: true) do |form| %>
              <div class="form-group">
                <%= form.label :email %>
                <%= form.text_field :email, class: "form-control", placeholder: "Email do adminstrador" %>
              </div>

              <div class="form-group">
                <%= form.label :password %>
                <%= form.password_field :password, class: "form-control", placeholder: "Nova senha" %>
              </div>

              <div class="form-group">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirme a nova senha" %>
              </div>

              <button type="submit" class="btn btn-default">Salvar</button>

              <%#link_to form.submit, class: "btn btn-default" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>