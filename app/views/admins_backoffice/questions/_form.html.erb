<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %></h1>
  </div>
</div>

<div class="row">
  <% if @question.errors.any? %>
    <div class="col-lg-12">
      <div class="alert alert-danger alert-dismissible">
        <button class="close" type="button" data-dismiss="alert" aria-hiden="true">x</button>
        <ul>
          <% @question.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%= "#{action_message} Pergunta" %>
      </div>
      <div class="panel-body">
        <div class="row">
          <div class="col-lg-12">
            <%= form_with(model: [:admins_backoffice, @question], local: true) do |form| %>
              <div class="form-group">
                <%= form.label :description %>
                <%= form.text_area :description, class: "form-control", placeholder: "Descrição da pergunta" %>
              </div>
              <div class="form-group">
                <%= form.label :subject %>
                <%= form.collection_select(:subject_id, Subject.all, :id, :description, {}, { class: "form-control" }) %>
              </div>  

              <button type="submit" class="btn btn-default">Salvar</button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>